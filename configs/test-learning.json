{
  "scenario": "6x6-2xthief-2xguardian",
  "time_limit": 120,
  "allow_noop": false,

  "algorithm": "pg",
  "controller": "fc",

  "hidden_layer_size": 100,
  "num_hidden_layers": 2,
  "activation_function": "tanh",
  "recurrent_layer_size": 50,
  "num_recurrent_layers": 1,

  "num_updates": 30,
  "num_transitions": 1000,
  "batch_size": 128,
  "num_epochs": 2,

  "lr": 0.01,
  "lr_decay_interval": 10,
  "lr_decay_factor": 0.1,
  "entropy_coef": 0.001,
  "discount": 0.99,

  "log_interval": 1,
  "eval_interval": 3,
  "save_interval": 0,

  "seed": 0
}
